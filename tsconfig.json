{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"],
      "~types": ["./types/index.d.ts"],
      "~types/*": ["./types"]
    },
    "resolveJsonModule": true,
    "target": "ES2017"
  },
  "include": [
    "src/**/*.ts",
    "src/shims-*.d.ts",
    "tests/**/*.ts",
    "rollup.config.ts"
  ]
}